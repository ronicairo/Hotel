{% extends 'base.html.twig' %}

{% block title %}Inscription | HouseHotel
{% endblock %}

{% block body %}


	<div class="row">
		<div class="col-10 mx-auto my-4">

			<h2 class="text-center">Les Chambres</h2>

			<table class="table">
				<thead>
					<tr>
						<th>#</th>
						<th>Titre</th>
						<th>description courte</th>
						<th>descriptionLongue</th>
						<th>Photo</th>
						<th>prixJournalier/nuit√©e</th>
						<th>Date_enregistrement</th>
						<th>Action</th>
					</tr>
				</thead>

				<tbody>
					{% for chambre in chambres %}
						<tr>
							<td>{{ chambre.id }}</td>
							<td>{{ chambre.titre}}</td>
							<td>{{ chambre.descriptionCourte}}</td>
							<td>{{ chambre.descriptionLongue}}</td>
							<td><img width="150" height="150" class="img-fluid" src="{{ asset('uploads/' ~ chambre.photo) }}" alt="{{ chambre.titre }}"></td>
							<td>{{ chambre.prixJournalier }}</td>
							<td>{{ chambre.createdAt | date('d/m/Y') }}</td>
							{# <td>{{ chambre.updatedAt | date('d/m/Y') }}</td> #}
							<td>

								<a href="{{ path('update_chambre', {'id': chambre.id}) }}" class="btn btn-warning" title="Modifier la chambre">
									<i class="bi bi-pencil-square"></i>
								</a>
								<a href="{{ path('hard_delete_chambre', {'id': chambre.id}) }}" class="btn btn-danger" title="Supprimer la chambre" onclick="return confirm('Cette action supprimera la chambre de la base Voulez-vous continuer ? )">
									<i class="bi bi-trash3"></i>
								</a>


								{# <a href="{{ path('update_chambre', {'id': chambre.id}) }}" data-toggle="modal" data-target="#exampleModalLong" class="btn btn-warning" title="Voir la chambre">
																<i class="bi bi-eye"></i>
																</a> #}
								<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
									<i class="bi bi-eye"></i>
								</button>
                               

							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="7" class="bg-warning text-center">Aucun chambre dans la poubelle</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

		</div>
	</div>
	{% if chambre is not defined %}
		<h1 class="text-center my-3">Ajouter une chambre</h1>
	{% else %}
		<h1 class="text-center my-3">Modifier une chambre</h1>
	{% endif %}

	<div class="row">
		<div class="col-8 mx-auto">

			{{form_start(form)}}

			<div
				class="row">
				{# <div class="col-6">{{form_row(form.roles)}}</div> #}
				<div class="col-6">{{form_row(form.titre)}}</div>
				<div class="col-6">{{form_row(form.prixJournalier)}}</div>
				<div class="col-6">{{form_row(form.descriptionCourte)}}</div>
				<div class="col-6">{{form_row(form.photo)}}</div>
				<div class="col-6">{{form_row(form.descriptionLongue)}}</div>
			</div>


			{{form_end(form)}}
		</div>
	</div>
	
	{# <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
