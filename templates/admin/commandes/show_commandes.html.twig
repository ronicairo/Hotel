{% extends 'base.html.twig' %}

{% block title %}Les commandes | HouseHotel
{% endblock %}

{% block body %}


	<div class="row">
		<div class="col-10 mx-auto my-4">

			<h2 class="text-center">Les commandes</h2>

			<table class="table">
				<thead>
					<tr>

						<th>Commande</th>
						<th>Chambres</th>
						<th>Date d'arrivée</th>
						<th>Date de départ</th>
						<th>Prix total</th>
						<th>Prénom</th>
						<th>Nom</th>
						<th>Téléphone</th>
						<th>Email</th>
						<th>Date et heure d'enregistrement</th>
						<th>Action</th>
					</tr>
				</thead>

				<tbody>
					{% for commande in commandes %}
						<tr>
							<td>{{ commande.id }}</td>
							<td>{{ commande.chambre}}</td>
							{# {% for chambre in chambres %}<td>{{ chambre.id }}</td>{% endfor %} #}
							<td>{{ commande.dateDebut | date('d/m/Y') }}</td>
							<td>{{ commande.dateFin | date('d/m/Y')}}</td>
							<td>{{ commande.prixTotal }}</td>
							<td>{{ commande.prenom }}</td>
							<td>{{ commande.nom }}</td>
							<td>{{ commande.telephone }}</td>
							<td>{{ commande.email }}</td>
							<td>{{ commande.createdAt | date('d/m/Y H:i:s') }}</td>
							<td>
								<a href="" class="btn btn-warning" title="Modifier la commande">
									<i class="bi bi-pencil-square"></i>
								</a>
								<a href="" class="btn btn-danger" title="Supprimer la commande" onclick="return confirm('Cette action supprimera la chambre de la base Voulez-vous continuer ? )">
									<i class="bi bi-trash3"></i>
								</a>

							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="7" class="bg-warning text-center">Aucune commande
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

		</div>
	</div>
	<div class="row">
		<div class="col-10 mx-auto my-4">
			
			</div>
		</div>


	{% endblock %}
